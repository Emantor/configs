Config { font = "xft:M+ 2c,M+ 2c medium:size=10"
     , bgColor = "#111111"
     , fgColor = "#babdb6"
     , position = TopW L 90
     , commands = [ Run Date "%k:%M" "date" 600  
                  , Run Weather "EDVE" ["-t", "<tempC>°C"] 1800
                  , Run DynNetwork ["-t", "<dev>:<rx>|<tx>",
